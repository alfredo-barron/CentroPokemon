<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:weightSum="1">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="98dp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/intenta"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/sorry"
        android:textSize="30dp"
        android:gravity="center_horizontal"
        android:drawableTop="@drawable/ic_action_refresh"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:id="@+id/icon_pokemon"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/ic_pokebola_fondo"
                        android:visibility="visible"/>

                    </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/hits_points"
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:layout_gravity="right"/>

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/progress_bar_states"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="20dp"
                        android:id="@+id/progressBarHT"
                        android:layout_alignParentBottom="true"
                        android:visibility="gone"/>

                    </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/attack"
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:layout_gravity="right"/>

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/progress_bar_states"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="20dp"
                        android:id="@+id/progressBarAT"
                        android:layout_alignParentBottom="true"
                        android:visibility="gone"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/defense"
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:layout_gravity="right"/>

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/progress_bar_states"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="20dp"
                        android:id="@+id/progressBarDF"
                        android:layout_alignParentBottom="true"
                        android:visibility="gone"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/speed"
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:layout_gravity="right"/>

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/progress_bar_states"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="20dp"
                        android:id="@+id/progressBarSP"
                        android:layout_alignParentBottom="true"
                        android:visibility="gone"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/evasion"
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:layout_gravity="right"/>

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/progress_bar_states"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="20dp"
                        android:id="@+id/progressBarEV"
                        android:layout_alignParentBottom="true"
                        android:visibility="gone"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/accuracy"
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:layout_gravity="right"/>

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/progress_bar_states"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="20dp"
                        android:id="@+id/progressBarAC"
                        android:layout_alignParentBottom="true"
                        android:visibility="gone"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/total"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:layout_gravity="right"/>

                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
