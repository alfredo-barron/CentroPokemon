<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="98dp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/intenta"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/sorry"
        android:textSize="30dp"
        android:gravity="center_horizontal"
        android:drawableTop="@drawable/ic_action_refresh"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/empty"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/aviso"
        android:textSize="30dp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>

    <ListView android:id="@+id/regeneratorlist"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"/>


    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:rowCount="4"
        android:columnCount="3"
        android:id="@+id/gridLayout"
        android:visibility="gone">


        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageView"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/ic_atrapar"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageView2"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/ic_atrapar"
            />
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageView3"
            android:layout_row="0"
            android:layout_column="2"
            android:src="@drawable/ic_atrapar"
            />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageView4"
            android:layout_row="2"
            android:layout_column="0"
            android:src="@drawable/ic_atrapar"
            />
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageView5"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/ic_atrapar"
            />
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageView6"
            android:layout_row="2"
            android:layout_column="2"
            android:src="@drawable/ic_atrapar"
            />

        <TextView
            android:id="@+id/pokebola"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Nombre"
            />

        <TextView
            android:id="@+id/pokebola1"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_column="1"
            android:layout_row="1"
            android:text="Nombre"
            />

        <TextView
            android:id="@+id/pokebola2"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_column="2"
            android:layout_row="1"
            android:text="Nombre"
            />

        <TextView
            android:id="@+id/pokebola3"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_column="0"
            android:layout_row="3"
            android:text="Nombre"
            />

        <TextView
            android:id="@+id/pokebola4"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_column="1"
            android:layout_row="3"
            android:text="Nombre"
            />

        <TextView
            android:id="@+id/pokebola5"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_column="2"
            android:layout_row="3"
            android:text="Nombre"
            />

    </GridLayout>


</RelativeLayout>